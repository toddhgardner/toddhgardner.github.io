---
import type { GetStaticPaths } from "astro";
import { getCollection, type CollectionEntry } from "astro:content";
import { getPulseItemId } from "../../../utils/getPulseItemId";

export const getStaticPaths: GetStaticPaths = async () => {
  const pulseItems = await getCollection("pulse");

  return pulseItems.map((item) => {
    const id = getPulseItemId(item);
    return {
      params: { id },
      props: { item }
    };
  });
}

interface Props {
  item: CollectionEntry<"pulse">;
}

const { item } = Astro.props as Props;
const { Content } = await item.render();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{item.data.title} - Pulse</title>
  </head>
  <body>
    <article>
      <h1>{item.data.title}</h1>
      <time datetime={item.data.publishedOn.toISOString()}>
        {item.data.publishedOn.toLocaleString()}
      </time>
      <p>{item.data.description}</p>
      <div class="content">
        <Content />
      </div>
      <a href="/pulse">‚Üê Back to Pulse</a>
    </article>
  </body>
</html>