---
import BaseHead from "../components/BaseHead.astro";
import calendarIcon from "../images/icons/calendar-check.svg?raw";
import messageIcon from "../images/icons/speech-bubble.svg?raw";
import contactIcon from "../images/icons/add-user.svg?raw";
import blueskyIcon from "../images/icons/butterfly.svg?raw";
import linkedinIcon from "../images/icons/linkedin.svg?raw";
import newsletterIcon from "../images/icons/newsletter.svg?raw";
import redditIcon from "../images/icons/reddit.svg?raw";
import rssIcon from "../images/icons/rss.svg?raw";
import githubIcon from "../images/icons/github.svg?raw";
import { AUTHOR_NAME } from "~/consts";

const title = "Contact Todd H. Gardner";
const description = "Here's how to get in touch with me. Let's find a time to talk soon.";

const url = new URL(Astro.url.pathname.replace(".html", ""), Astro.url.origin);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      canonical={url}
      robots="noindex, nofollow" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:site_name" content={AUTHOR_NAME} />
    <meta property="og:url" content={url} />
    <meta property="og:description" content={description} />
    <meta property="og:locale" content="en_US">

    <style>

      section {
        margin-bottom: 32px;
      }

      section.title {
        display: flex;
        flex-direction: column;
        align-items: center;
        h1, h2 {
          margin: 0;
        }
      }

      section.contact {
        ul {
          list-style: none;
          margin: 0;
          padding: 0;
          display: flex;
          gap: 16px;
          width: 100%;
          &>li {
            flex: 1 1 33%;
            list-style: none;
            margin: 0;
            padding: 0;
          }
          a {
            text-decoration: none;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 16px;
            text-align: center;
            padding: 16px;
            border-radius: 16px;
            font-size: 0.9em;
          }
          svg {
            width: 60px;
            height: auto;
          }
        }
      }


      section.links {
        ul {
          margin: 0 20px;

        }
        a {
          line-height: 1em;
          width: 100%;
        }

      }

      section.follow {
        ul {
          margin-top: 64px;
          display: flex;
          gap: 32px;
          flex-wrap: wrap;
          justify-content: center;
        }
        li {
          svg {
            fill: var(--pico-muted-color);
            width: 64px;
            height: auto;
          }
          a:hover,a:focus,a:active {
            svg {
              fill: var(--pico-primary);
            }
          }
        }
      }

      footer {
        margin-top: 80px;
        text-align: center;
      }

    </style>

  </head>
  <body>
    <main class="container">

      <article class="max-text-width">
        <header class="video">
          <div style="position:relative;padding-top:56.25%;"><iframe title="Hello!" loading="eager" src="https://iframe.mediadelivery.net/embed/498473/41ac5b96-1b89-4730-8e7d-3323ecede061?autoplay=true&loop=false&muted=true&preload=true&responsive=true" loading="lazy" style="border:0;position:absolute;top:0;height:100%;width:100%;" allow="accelerometer;gyroscope;autoplay;encrypted-media;picture-in-picture;" allowfullscreen="true"></iframe></div>
        </header>
        <section class="title">
          <h1>Todd H. Gardner</h1>
          <h2 class="secondary">I start things.</h2>
        </section>
        <section class="contact">
          <ul>
            <li>
              <a href="https://calendar.app.google/1e5FdXNDjfSS1Zy99">
                <Fragment set:html={calendarIcon} />
                Book a meeting
              </a>
            </li>
            <li>
              <a href="https://share.hsforms.com/1BT5UlZrcSQyOuEfanQDpwwebqdl">
                <Fragment set:html={messageIcon} />
                Send a message
              </a>
            </li>
            <li>
              <a href="/toddhgardner.vcf" download="">
                <Fragment set:html={contactIcon} />
                Add to contacts
              </a>
            </li>
          </ul>
        </section>

        <section class="links">
          <h2>My projects</h2>
          <ul class="unlist flex-column flex-gap-16">
            <li>
              <a href="https://trackjs.com/" role="button" class="trackjs">
                TrackJS <br>
                <small>JavaScript Error Monitoring</small>
              </a>
            </li>
            <li>
              <a href="https://requestmetrics.com/" role="button" class="requestmetrics">
                Request Metrics<br>
                <small>Web Performance</small>
              </a>
            </li>
            <li>
              <a href="https://www.certkit.io/" role="button" class="certkit">
                CertKit<br>
                <small>SSL Certificate Management</small>
              </a>
            </li>
            <li>
              <a href="/" role="button">
                My Website<br>
                <small>Everything Else</small>
              </a>
            </li>
          </ul>
        </section>

        <section class="follow">
          <h2>Follow me</h2>
          <ul class="unlist flex flex-gap-16">
            <li>
              <a href={new URL("feed.xml", Astro.url.origin)} aria-label="Subscribe to RSS Feed" data-tooltip="Subscribe to RSS Feed">
                <Fragment set:html={rssIcon} />
              </a>
            </li>
            <li>
              <a href="https://buttondown.com/toddhgardner" aria-label="Subscribe to Newsletter" data-tooltip="Subscribe to Newsletter">
                <Fragment set:html={newsletterIcon} />
              </a>
            </li>
            <li>
              <a href="https://www.linkedin.com/in/toddhgardner/"
                aria-label="Follow me on LinkedIn" data-tooltip="Follow me on LinkedIn">
                <Fragment set:html={linkedinIcon} />
              </a>
            </li>
          </ul>
        </section>

        <footer>
          <p>
            I made this myself with plain HTML ❤️
          </p>
        </footer>

      </article>
    </main>
  </body>
</html>
